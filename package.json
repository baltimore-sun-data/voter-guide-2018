{
  "name": "voter-guide-2018",
  "version": "1.0.0",
  "description": "Baltimore Sun Voter Guide for Election 2018",
  "main": "index.js",
  "repository": "git@github.com:baltimore-sun-data/voter-guide-2018.git",
  "author": "carljohnson@tronc.com",
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn run make-content && yarn run css && hugo",
    "server": "hugo serve",
    "format": "prettier --write '**/*.{css,js,json,scss}'",
    "make-content": "go run csv-splitter.go csv/*.csv",
    "precommit": "prettier -l '**/*.{css,js,json,scss}'",
    "css": "yarn run css:sass && yarn run css:autoprefixer",
    "css:autoprefixer":
      "postcss --use autoprefixer --map -o dist/css/app.css dist/css/app.css",
    "css:sass": "node-sass --output dist/css static/scss/app.scss",
    "test": "eslint static/scripts"
  },
  "lint-staged": {
    "*.{css,js,json,scss}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2"
  },
  "dependencies": {
    "autoprefixer": "^8.0.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0"
  }
}
